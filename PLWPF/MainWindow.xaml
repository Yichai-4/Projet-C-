<Window x:Class="PLWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="מערכת  איתור הנופש" Height="650" Width="800" FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="125*"/>
            <RowDefinition Height="118*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource = "Images/Fond d'écran 1.jpg"/>
        </Grid.Background>
        <Button x:Name="ButtonGR" Content="Guest Request" HorizontalAlignment="Center" Margin="100,10,100,10" VerticalAlignment="Center" Width="580" Height="80" FontSize="36" Grid.Row="2" Click="ButtonGR_Click" HorizontalContentAlignment="Center" UseLayoutRounding="False"/>
        <Button x:Name="ButtonHU" Content="Hosting Unit" HorizontalAlignment="Center" Margin="100,10,100,10" VerticalAlignment="Bottom" Width="580" Height="80" FontSize="36" Grid.Row="3" Click="ButtonHU_Click"/>
        <Button x:Name="ButtonAdmin" Content="Admin" HorizontalAlignment="Center" Margin="100,10,100,10" VerticalAlignment="Center" Width="580" Height="80" FontSize="36" Grid.Row="4" VerticalContentAlignment="Center" Click="ButtonAdmin_Click"/>
        <Label Content="Welcome to the YBY Site" HorizontalAlignment="Center" Margin="57,10,49,0" VerticalAlignment="Top" FontFamily="Rage Italic" FontSize="72"/>

    </Grid>
</Window>
