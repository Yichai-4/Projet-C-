        <Label Name="TitleGR" Content="Add a new guest request " HorizontalAlignment="Left" VerticalAlignment="Top" Height="45" Width="792" FontSize="24" FontFamily="Segoe UI Black"/>
        <DatePicker  Name="dpEntryDate" Text="{Binding Path= EntryDate}" HorizontalAlignment="Left" Margin="144,185,0,0" Grid.Row="1" VerticalAlignment="Top" Width="153" DisplayDate="2020-01-20" DisplayDateEnd="2050-12-31" DisplayDateStart="2020-01-01" Height="24" />
        <DatePicker Name="dpReleaseDate" Text="{Binding Path= ReleaseDate}" HorizontalAlignment="Left" Margin="144,219,0,0" Grid.Row="1" VerticalAlignment="Top" Width="153" DisplayDateStart="2020-01-01" DisplayDateEnd="2050-12-31" DisplayDate="2020-01-20" Height="24"/>
        <Label Content="Mail adress :" HorizontalAlignment="Left" Margin="10,135,0,0" Grid.Row="1" VerticalAlignment="Top" Width="99" FontSize="14" FontStyle="Italic"/>
        <TextBox Name="tbMail" HorizontalAlignment="Left" Height="23" Margin="144,139,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154"/>


