        <Label Name="TitleGR" Content="Add a new guest request " HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontFamily="Segoe UI Black"/>
        <DatePicker  Name="dpEntryDate" Text="{Binding Path= EntryDate}" HorizontalAlignment="Left" Margin="151,144,0,0" Grid.Row="2" VerticalAlignment="Top" Width="158" DisplayDate="2020-01-20" DisplayDateEnd="2050-12-31" DisplayDateStart="2020-01-01" Height="24" VerticalContentAlignment="Center" />
        <DatePicker Name="dpReleaseDate" Text="{Binding Path= ReleaseDate}" HorizontalAlignment="Left" Margin="151,178,0,0" Grid.Row="2" VerticalAlignment="Top" Width="158" DisplayDateStart="2020-01-01" DisplayDateEnd="2050-12-31" DisplayDate="2020-01-20" Height="24" VerticalContentAlignment="Center"/>
        <Label Content="Mail adress :" HorizontalAlignment="Left" Margin="12,93,0,0" Grid.Row="2" VerticalAlignment="Top" Width="103" FontSize="14" FontStyle="Italic" Height="29" VerticalContentAlignment="Center"/>
        <TextBox Name="tbMail" HorizontalAlignment="Left" Height="23" Margin="151,97,0,0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="159" VerticalContentAlignment="Center"/>
        <Grid HorizontalAlignment="Center" Height="370" Grid.Row="2" VerticalAlignment="Center" Width="792" Margin="0,1,0,-1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="189*"/>
                <ColumnDefinition Width="197*"/>
            </Grid.ColumnDefinitions>
        </Grid>


    </Grid>
</Window>
