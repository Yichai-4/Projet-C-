<Window x:Class="PLWPF.HostingUnit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="HostingUnit" Height="450" Width="605">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="225*"/>
            <RowDefinition Height="129*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Images/Hotel image 1.jpg"/>
        </Grid.Background>
        <Button Name="buttonAddHU" Content="Add Hosting Unit" HorizontalAlignment="Center" Margin="10,104,0,0" Grid.Row="1" VerticalAlignment="Center" Width="572" Height="90" FontSize="36" Click="buttonAddHU_Click"/>
        <Button Name="buttonPersonalA" Content="Personal Area" HorizontalAlignment="Center" Margin="10,20,0,0" Grid.Row="2" VerticalAlignment="Center" Width="572" Height="90" FontSize="36" Click="button_Click"/>
        <Label Content="Hosting Unit" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontFamily="Segoe UI Black" Margin="10,0,0,0"/>

    </Grid>
</Window>
